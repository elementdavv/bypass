//////////////// Bing ChatGPT /////////////////////////////////
modules = append(modules, {
    dnsquery: func(m) {
        if m.domain == "cn.bing.com" || m.domain == "www.bing.com" {
            return {forcefakedns: true}
        }
    },
    address: func(m) {
        if m.network == "tcp" && m.domainaddress && (m.domainaddress == "cn.bing.com:443" || m.domainaddress == "www.bing.com:443") {
            return {"mitm": true, "mitmprotocol": "https"}
        }
        if m.network == "udp" && m.domainaddress && (m.domainaddress == "cn.bing.com:443" || m.domainaddress == "www.bing.com:443") {
            return { "block": true }
        }
    },
    httprequest: func(request) {
        if text.has_prefix(request["URL"], "https://cn.bing.com/") {
            return {
                "StatusCode": 301,
                "Location": "https://www.bing.com/"
            }
        }
        if text.has_prefix(request["URL"], "https://www.bing.com/") {
            request["User-Agent"] += "EdgA/110.0.1587.41"
        }
    }
})


